{
  "manifest_version": 3,
  "name": "React Chrome Extension - Image Grabber",
  "description": "This is a Chrome extension build with React and TS",
  "version": "1.0",
  "author": "Brytvina Alona",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "js/popup.html",
    "default_title": "React Chrome Extension - Image Grabber"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": [
      "images/background1.png",
      "images/background2.png",
      "images/background3.png",
      "images/flakes1.png",
      "images/1.svg",
      "images/2.svg",
      "images/3.svg"
    ]
  }]
}
